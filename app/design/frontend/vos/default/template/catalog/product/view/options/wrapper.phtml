		labelfor = "#"+$j(this).attr("for");
		html += '<div align="center" class="opbox-size" ><a id="'+nid+'" onclick="clickOptionCustom(\''+labelfor+'\',this)" class="size_select_custom" href="javascript:void(0);">'+this.innerHTML+'</a></div>';
	});
	function clickOptionCustom(id,src)
	{
		$j("#radio_replace a").attr("class","size_select_custom");
		$j(id).click();
		$j(src).attr("class","size_select_custom_select");
	}
	$j("#radio_replace").html(html);
	$j(fistSizeId).click();
	$j(".product-options select> option").each(function(index){
		//alert(this.innerHTML);
		
