		{	
		nid = "cn_color_option_"+index;
		if(!fistColorId)fistColorId= "#"+nid;
		checkhtml += '<div align="center" class="opbox" style="background:'+this.innerHTML+'" ><a id="'+nid+'" onclick="clickSelectCustom(\''+index+'\',\''+this.value+'\',this)" class="color_ses" href="javascript:void(0);">&nbsp;</a></div>';
		}
	});
	function clickSelectCustom(index,src,parent)
	{
		var p;
		p = $j(".product-options select");
		p.val(src);
		$j("a.color_ses").html("&nbsp;");
		parent.innerHTML="<img src='/images/tick.png'>";	
	}
	$j("#select_replace").html(checkhtml);
